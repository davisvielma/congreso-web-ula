{
  "name": "congreso-web-ula",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "format": "biome format --write ./src",
		"lint:lint": "biome lint ./src",
		"lint:check": "biome check ./src",
		"lint": "npm run format && npm run lint:lint && npm run lint:check"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.11",
    "lucide-react": "^0.534.0",
    "react": "^19.1.0",
    "react-confetti": "^6.4.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.7.1",
    "react-toastify": "^11.0.5",
    "react-tsparticles": "^2.12.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tsparticles-slim": "^2.12.0",
    "zod": "^4.0.15",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "globals": "^16.3.0",
    "tw-animate-css": "^1.3.6",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  },
  "lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome format --write --no-errors-on-unmatched",
			"biome lint --apply --no-errors-on-unmatched",
			"biome check --files-ignore-unknown=true",
			"biome check --apply --no-errors-on-unmatched",
			"biome check --apply --organize-imports-enabled=false --no-errors-on-unmatched",
			"biome check --apply-unsafe --no-errors-on-unmatched"
		]
	}
}
